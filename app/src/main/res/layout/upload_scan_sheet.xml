<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_height="@dimen/dp_0"
        android:background="@color/colorBG"
        android:id="@+id/bottomSheetParentView"
        app:behavior_hideable="true"
        app:behavior_peekHeight="@dimen/dp_0"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
            android:gravity="end"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginEnd="@dimen/dp_4"
                android:id="@+id/closeBottomSheet"
                android:padding="@dimen/dp_2"
                android:src="@drawable/ic_close"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/uploadBottomSheet"
            android:padding="@dimen/dp_8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:src="@drawable/ic_upload"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"/>

            <TextView
                android:layout_gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/colorWhite"
                android:text="@string/upload_braille"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>

        <LinearLayout
            android:id="@+id/scanBottomSheet"
            android:padding="@dimen/dp_8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:src="@drawable/ic_scanner"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"/>

            <TextView
                android:layout_gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/colorWhite"
                android:text="@string/scan_braille"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</layout>